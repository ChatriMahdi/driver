version: '3.8'

services:
  ollama:
    image: ollama/ollama:latest
    container_name: ollama
    restart: unless-stopped
    ports:
      - "11434:11434"
    volumes:
      - ollama_data:/root/.ollama
      - /usr/share/nvidia:/usr/share/nvidia:ro  # For NVIDIA libraries
    deploy:
      resources:
        reservations:
          devices:
            - driver: nvidia
              count: all
              capabilities: [gpu]
    environment:
      - NVIDIA_VISIBLE_DEVICES=all
      - OLLAMA_KEEP_ALIVE=24h  # Keep models loaded for 24 hours
      - OLLAMA_NUM_PARALLEL=1  # Number of parallel requests
    # Optional: Set hostname for easier local access
    # hostname: ollama.local
    # Optional: Add to a custom network
    # networks:
    #   - ai_network

# Optional: Create custom network
# networks:
#   ai_network:
#     driver: bridge

volumes:
  ollama_data:



